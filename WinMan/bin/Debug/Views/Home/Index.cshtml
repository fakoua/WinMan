$SectionStyle {
<style>
    .tpl {
        visibility:hidden;
    }
    #processor {
        width: 100%;
        height: 300px;
        font-size: 14px;
        line-height: 1.2em;
    }
</style>
}
<h2>W</h2>
<div class="col-lg-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            System Information
        </div>
        <div id="system-info" class="panel-body">
            <h4>Windows Edition</h4>
            <span class="tpl">
                {{=it.OsName}}
            </span>
            <h4>System</h4>
            <div class="tpl">
                <div class="row">
                    <div class="col-md-3">Manufacturer:</div>
                    <div class="col-md-offset-1 col-md-8">Microsoft Corporation</div>
                </div>
                <div class="row">
                    <div class="col-md-3">System name:</div>
                    <div class="col-md-offset-1 col-md-8">{{=it.MachineName}}</div>
                </div>
                <div class="row">
                    <div class="col-md-3">Processor:</div>
                    <div class="col-md-offset-1 col-md-8">{{=it.Processor}}</div>
                </div>
                <div class="row">
                    <div class="col-md-3">Memory (RAM):</div>
                    <div class="col-md-offset-1 col-md-8">{{=it.Memory}}</div>
                </div>
                <div class="row">
                    <div class="col-md-3">System type:</div>
                    <div class="col-md-offset-1 col-md-8">{{=it.Architecture}}</div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-lg-6">
    <div id="processor"></div>
</div>
$SectionScript {

<script src="/dashboard/vendor/flot/jquery.flot.js"></script>
<script src="/dashboard/vendor/flot/jquery.flot.spline.js"></script>

<script>
    $(document).ready(function () {
        domLoad();
        perfCounters();
    });

    function domLoad() {
        $('#page-wrapper').loading();
        var client = new $.RestClient('/api/os/');
        client.add('info');
        client.info.read().done(function (data) {
            var tpl = $('#system-info').html();
            var templateFunction = doT.template(tpl);
            var html = templateFunction(data);
            $('#system-info').html(html);
            $('.tpl').css('visibility', 'visible');
            $('#page-wrapper').loading('stop');
        });
    }

    var data = [], plot;

    function perfCounters() {
       
        for (var i = 0; i <= 50; i++) {
            data.push([i, 0]);
        }
        plot = $.plot("#processor", [data], {
            series: {
                shadowSize: 0,
                lines: {
                    show: false,
                    lineColor: "blue"
                },
                splines: {
                    show: true,
                    tension: 0.5,
                    lineWidth: 1,
                    fill: .3
                }
            },
            yaxis: {
                min: 0,
                max: 100
            },
            xaxis: {
                show: false
            }
        });
        updateProcessor();
    }

    function updateProcessor() {
        var client = new $.RestClient('/api/performancecounter/');
        client.add('getperformancecounter');
        client.getperformancecounter.read().done(function (d) {
            data = data.slice(1, 50);
            data.push([50, d.Processor]);
            
            for (var i = 0; i < data.length; i++) {
                data[i][0] = i;
            }
          
            plot.setData([data]);
            plot.draw();
            window.setTimeout(updateProcessor, 1000);
        });
    }

</script>
}