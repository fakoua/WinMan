$SectionStyle {
<style>
    .tpl {
        visibility: hidden;
    }

    #processor, #memory {
        width: 100%;
        height: 230px;
        font-size: 14px;
        line-height: 1.2em;
    }
</style>
}
<div class="row">
    <h2>W</h2>
    <div class="col-lg-6">
        <div class="panel panel-info">
            <div class="panel-heading">
                System Information
            </div>
            <div id="system-info" class="panel-body">
                <h3>Windows Edition</h3>
                <span class="tpl">
                    {{=it.OsName}}
                </span>
                <h3>System</h3>
                <div class="tpl">
                    <div class="row">
                        <div class="col-md-3">Manufacturer:</div>
                        <div class="col-md-offset-1 col-md-8">Microsoft Corporation</div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">System name:</div>
                        <div class="col-md-offset-1 col-md-8">{{=it.MachineName}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">Processor:</div>
                        <div class="col-md-offset-1 col-md-8">{{=it.Processor}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">Memory (RAM):</div>
                        <div class="col-md-offset-1 col-md-8">{{=it.Memory}}</div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">System type:</div>
                        <div class="col-md-offset-1 col-md-8">{{=it.Architecture}}</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                CPU
            </div>
            <div class="panel-body">
                <div id="processor"></div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Memory
            </div>
            <div class="panel-body">
                <div id="memory"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        
    </div>
</div>
        $SectionScript {

<script src="/dashboard/vendor/flot/jquery.flot.js"></script>
<script src="/dashboard/vendor/flot/jquery.flot.spline.js"></script>
<script>
    $(document).ready(function () {
        domLoad();
        perfCounters();
    });

    function domLoad() {
        $('#page-wrapper').loading();
        var client = new $.RestClient('/api/os/');
        client.add('info');
        client.info.read().done(function (data) {
            var tpl = $('#system-info').html();
            var templateFunction = doT.template(tpl);
            var html = templateFunction(data);
            $('#system-info').html(html);
            $('.tpl').css('visibility', 'visible');
            $('#page-wrapper').loading('stop');
        });
    }

    var dataProcessor = [], dataMemory = [], plotProcessor, plotMemory;

    function perfCounters() {

        for (var i = 0; i <= 50; i++) {
            dataProcessor.push([i, 0]);
            dataMemory.push([i, 0]);
        }
        plotProcessor = $.plot("#processor", [dataProcessor], {
            series: {
                shadowSize: 0,
                color: '#2E8CC4',
                lines: {
                    show: false,
                    lineColor: "blue"
                },
                splines: {
                    show: true,
                    tension: 0.5,
                    lineWidth: 1,
                    fill: .3
                }
            },
            yaxis: {
                min: 0,
                max: 100
            },
            xaxis: {
                show: false
            }
        });

        plotMemory = $.plot("#memory", [dataMemory], {
            series: {
                shadowSize: 0,
                color: '#9528B4',
                lines: {
                    show: false,
                    lineColor: "blue"
                },
                splines: {
                    show: true,
                    tension: 0.5,
                    lineWidth: 1,
                    fill: .3
                }
            },
            yaxis: {
                min: 0,
                max: 100
            },
            xaxis: {
                show: false
            }
        });
        updateCounters();
    }

    function updateCounters() {
        var client = new $.RestClient('/api/performancecounter/');
        client.add('getperformancecounter');
        client.getperformancecounter.read().done(function (d) {
            dataProcessor = dataProcessor.slice(1, 50);
            dataProcessor.push([50, d.Processor]);

            dataMemory = dataMemory.slice(1, 50);
            dataMemory.push([50, d.Memory]);

            for (var i = 0; i < dataProcessor.length; i++) {
                dataProcessor[i][0] = i;
                dataMemory[i][0] = i;
            }

            plotProcessor.setData([dataProcessor]);
            plotProcessor.draw();

            plotMemory.setData([dataMemory]);
            plotMemory.draw();

            window.setTimeout(updateCounters, 1000);
        });
    }

</script>
        }
